{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node",
  "_version": "18.0.0",

  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "Node16",
    "target": "ES2019",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node16"
  }
}
